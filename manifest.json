{
    "manifest_version": 3,
    "name": "My first Chrome Extension",
    "description": "Chrome extension workshop for Le Wagon Lyon",
    "author": "Benjamin",
    "version": "1.0.0",
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
     "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["scripts/cheesify.js"]
        }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": ["tabs"]
}
